include $(HOME)/lib/flag.mk

ROUTINES=FFTW.f90
all: libfftw_fgsl.a libfftw_fgsl_deb.a

libfftw_fgsl.a:
	@rm -fv *.o *.mod $(MYLIB)/$@	  
	$(FC) -c $(FFLAG) $(ROUTINES) -I$(FGSLDIR)/include/ -L$(FGSLDIR)/lib/ -L/usr/lib64 -lfgsl_ifort -lgsl -lgslcblas
	ar cvq $@ `ls *.o | sort | uniq`  
	${RANLIB} $@			  
	@mv -fv *.a $(MYLIB)/		  
	@mv -fv *.mod $(MYINCLUDE)/	  
	@rm -f *.o			  
	@echo 'LIBRARY IS DONE.........'
	@echo ' '

libfftw_fgsl_deb.a:
	@rm -fv *.o *.mod $(MYLIB)/$@	  
	$(FC) -c $(DFLAG) $(ROUTINES) -I$(FGSLDIR)/include/ -L$(FGSLDIR)/lib/ -L/usr/lib64 -lfgsl_ifort -lgsl -lgslcblas
	ar cvq $@ `ls *.o | sort | uniq`  
	${RANLIB} $@			  
	@mv -fv *.a $(MYLIB)/		  
	@mv -fv *.mod $(MYINCLUDE)/debug/	  
	@rm -f *.o			  
	@echo 'LIBRARY IS DONE.........'
	@echo ' '
